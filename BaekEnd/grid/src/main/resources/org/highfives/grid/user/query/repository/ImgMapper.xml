    <select id="getProfileImg" parameterType="_int">
        SELECT
               I.path
          FROM employee_img I
          JOIN img_type T ON I.type_id = T.id
         WHERE I.employee_id = #{id}
           AND T.type_name = '프로필'
    </select>

</mapper>